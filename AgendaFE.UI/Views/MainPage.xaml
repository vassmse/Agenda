                <NavigationViewItemHeader Content="Calendar"/>
                <NavigationViewItem x:Uid="AppsNavItem" Icon="Calendar" Content="Today" Tag="home"/>
                <NavigationViewItem x:Uid="GamesNavItem" Icon="Calendar" Content="7 days" Tag="home"/>
                <NavigationViewItem x:Uid="Warning" Icon="Audio" Content="Expired" Tag="music"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="Categories"/>
                <NavigationViewItem  Content="Work" Tag="apps"/>
                <NavigationViewItem  Content="School" Tag="games"/>
                <NavigationViewItem  Content="Shopping" Tag="music"/>
            </NavigationView.MenuItems>

